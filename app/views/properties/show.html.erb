<h1>Property</h1>

<p>
  <b>Name</b><br>
  <%= @property.name %>
</p>

<p>
  <b>Text</b><br>
  <%= @property.text %>
</p>

<p>
  <b>Multiple choice</b><br>
  <%= @property.multiple_choice %>
</p>

<div class="form-actions">
  <%= link_to 'Back', properties_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_property_path(@property), :class => 'btn' %>
  <%= link_to 'Delete', property_path(@property), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
