<%= simple_form_for @property, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Property</legend>
    <%= f.input :name %>
    <%= f.input :text %>
    <%= f.input :multiple_choice %>
    <%= f.simple_fields_for :choices do |c| %>
      <%= c.input :text %>
    <% end %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', properties_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>