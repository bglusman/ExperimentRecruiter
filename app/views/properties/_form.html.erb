<%= simple_nested_form_for @property, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Property</legend>
    <%= f.input :name %>
    <%= f.input :text %>
    <%= f.input :multiple_choice %>
    <%= f.input :mutually_exclusive%>
    <%= f.simple_fields_for :choices do |c| %>
      <%= c.input :text %>
      <%= c.link_to_remove "Remove this choice" %>
    <% end %>
    <%= f.link_to_add "Add a choice", :choices %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', properties_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>